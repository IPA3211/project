#include<stdio.h>
int ctrl_key(int stage)
{
  int a,b;
  char = ch;
  ch = getchar();
  while(1)
  {
    if(ch == 'l')
    {   
      map[stage][a][b] = '1';
      map[stage][a+1][b] = '5';
      a += 1;
     }  
     else if(ch == 'h')
     {
      map[stage][a][b] = '1';
      map[stage][a-1][b] = '5';
      a -= 1;
     }
     else if(ch == 'j')
     {
      map[stage][a][b] = '1';
      map[stage][a][b-1] = '5';
      b -= 1;
     }
     else if(ch == 'k')
     {
      map[stage][a][b] = '1';
      map[stage][a][b+1] = '5';
      b += 1;
     }
 }
}
